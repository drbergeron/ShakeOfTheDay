@using Microsoft.AspNetCore.Http

@model IEnumerable<ShakeotDay.Core.Models.Game>
@{
    
}

<h3>Recent Games</h3>

<div class="gamesIndexWrapper">
    <table class="games" id="games">
        <thead>
            <tr>
                <th>Game ID</th>
                <td>Date Played</td>
                <td>Result</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model)
            {

                <tr data-gameid="@game.Id">
                    <td>@game.Id</td>
                    <td>@game.Year / @game.Day</td>
                    <td>@game.isWinningGame</td>
                    <td><a asp-area="" asp-controller="Game" asp-action="Details" asp-route-id="@game.Id">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
    @section Scripts{
    <script src="@Url.Content("//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js")" type="text/javascript"></script>
    <script>
        $('#games').DataTable();
    </script>
    }
   
</div>

